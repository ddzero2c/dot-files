[user]
    name = Ryder
    email = ddzero2c@gmail.com
[core]
	filemode = true
	editor = nvim
	pager = diff-so-fancy | emojify | less --tabs=2 -RFX
[alias]
	st = status
	ci = commit
	co = checkout
	cp = cherry-pick
	br = branch
	df = diff
	pick = cherry-pick
	fp = format-patch
	la = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ll = log  --decorate --pretty=oneline --abbrev-commit
	lam = log --graph --decorate --pretty=oneline --abbrev-commit --all --merges
	llm = log  --decorate --pretty=oneline --abbrev-commit --merges
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	log = auto
[push]
	default = simple
[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
# set "nvim" as tool for merging
[merge]
  tool = nvim
# automatically launch merge tool without displaying a prompt
[mergetool]
  prompt = false
	keepBackup = false
[difftool]
	prompt = false
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[pull]
	rebase = true
[diff-so-fancy]
	stripLeadingSymbols = false
