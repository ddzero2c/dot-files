[core]
	filemode = true
	editor = nvim
    pager = delta --color-only
[interactive]
    diffFilter = delta --color-only
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	df = diff
	pick = cherry-pick
	fp = format-patch
	la = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ll = log  --decorate --pretty=oneline --abbrev-commit
	lam = log --graph --decorate --pretty=oneline --abbrev-commit --all --merges
	llm = log  --decorate --pretty=oneline --abbrev-commit --merges
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	log = auto
[push]
	default = simple
