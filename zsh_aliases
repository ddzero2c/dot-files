alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias ls='ls -G'
alias ll='ls -ahlF'

alias d='docker'
alias dc='docker-compose'

alias g='git'
alias gist='gh gist'
source <(gh completion --shell zsh)

alias k=kubectl
source <(kubectl completion zsh)
alias kns=kubens
alias kctx=kubectx

alias vim='nvim'
alias vdf='vimdiff'
alias vimdiff='nvim -d'
alias v='nvim -p'
alias t='tmux -2 -u'
alias f='nvim -p $(fzf)'

alias myip='ifconfig | grep "10\.\|192\.168" | cut -f2'
alias szshrc='source ~/.zshrc'
alias vzshrc='nvim ~/.zshrc'
